<div class="modal fade" id="planModal" tabindex="-1" role="dialog" aria-labelledby="planModalLabel" aria-hidden="true"
    data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="planModalLabel">Add new plan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-12" style="margin-top:0.5rem">
                        <div class="form-group">
                            <label for="planName" class="control-label mb-1">Name</label>
                            <input id="planName" name="planName" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                        </div>
                    </div>
                
                    <div class="col-xl-12" style="margin-top:0.5rem">
                        <div class="form-group">
                            <label for="planAmount" class="control-label mb-1">Amount</label>
                            <input id="planAmount" name="planAmount" type="number" class="form-control" aria-required="true" aria-invalid="false" value="">
                        </div>
                    </div>
                    <div class="col-xl-12" style="margin-top:0.5rem">
                        <div class="form-group">
                            <label for="planBonus" class="control-label mb-1">Bonus Percent</label>
                            <input id="planBonus" name="planBonus" type="number" class="form-control" aria-required="true" aria-invalid="false">
                        </div>
                    </div>
                    <div class="col-xl-12" style="margin-top:0.5rem">
                        <div class="form-group">
                            <label for="planGGR" class="control-label mb-1">Allow GGR</label>
                            <input id="planGGR" name="planGGR" type="number" class="form-control" aria-required="true" aria-invalid="false" value="">
                        </div>
                    </div>
                    <div class="col-xl-12" style="margin-top:0.5rem">
                        <div class="form-group">
                            <label for="planMemo" class="control-label mb-1">Memo</label>
                            <input id="planMemo" name="planMemo" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= __('button.text.cancel') %></button>
                <button type="button" class="btn btn-primary" id="create_new_plan"><%= __('button.text.confirm') %></button>
            </div>
        </div>
    </div>
</div>
